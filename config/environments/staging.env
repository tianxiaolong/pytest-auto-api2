# 预发环境配置文件
# 复制此文件并根据实际情况修改配置值

# 环境基本信息
TEST_ENV=staging
ENV_NAME=预发环境
PROJECT_NAME=pytest-auto-api2
TESTER_NAME=测试工程师

# 预发环境服务地址
STAGING_HOST=https://staging-api.example.com
STAGING_APP_HOST=https://staging-app.example.com
STAGING_DB_URL=mysql://user:password@staging-db:3306/stagingdb

# 数据驱动配置
DATA_DRIVER_TYPE=yaml
YAML_DATA_PATH=data/yaml_data
EXCEL_DATA_PATH=data/excel_data

# 测试用例配置
REAL_TIME_UPDATE=False

# 通知配置
NOTIFICATION_TYPE=2
EXCEL_REPORT=True

# 钉钉通知配置（预发环境）
