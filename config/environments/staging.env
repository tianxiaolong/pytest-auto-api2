DING_TALK_SECRET=staging_secret

# 企业微信通知配置（预发环境）
WECHAT_WEBHOOK=https://qyapi.weixin.qq.com/cgi-bin/webhook/send?key=staging_key

# 邮箱通知配置（预发环境）
EMAIL_SEND_USER=staging@example.com
EMAIL_HOST=smtp.example.com
EMAIL_STAMP_KEY=staging_password
EMAIL_SEND_LIST=team@example.com,manager@example.com

# 飞书通知配置（预发环境）
LARK_WEBHOOK=https://open.feishu.cn/open-apis/bot/v2/hook/staging_hook

# 数据库配置（预发环境）
MYSQL_SWITCH=True
MYSQL_HOST=staging-mysql.example.com
MYSQL_USER=staging_user
MYSQL_PASSWORD=staging_password
