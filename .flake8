[flake8]
max-line-length = 120
ignore =
    E203,  # whitespace before ':'
    W503,  # line break before binary operator
    F401,  # imported but unused (handled separately)
    W293,  # blank line contains whitespace (auto-fixed)
    F541,  # f-string is missing placeholders (auto-fixed)
exclude =
    venv,
    __pycache__,
    .git,
    build,
    dist,
    *.egg-info
